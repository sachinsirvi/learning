function create_csv($data, $filePath) {
    // Open the file in write mode
    $file = fopen($filePath, 'w');

    // Write the header row to the CSV file
    fputcsv($file, ['Outlet ID', 'Color', 'Sale History Color']);

    // Loop through the data and write each row to the CSV file
    foreach ($data as $row) {
        fputcsv($file, $row);
    }

    // Close the file
    fclose($file);
}
$filename = "Mjengo_color_code.csv";
$filePath = '/tmp/' . $filename;
